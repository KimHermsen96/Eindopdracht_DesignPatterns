<Window x:Class="CuircuitVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuircuitVisualizer"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="100" Margin="397,52.2,-231.8,-68.2" VerticalAlignment="Top" Width="100" Grid.Column="2" Grid.Row="2"/>
        <Grid HorizontalAlignment="Right" Height="423" VerticalAlignment="Top" Width="795" Margin="-530,0,0.2,-0.2" d:IsLocked="True" Grid.RowSpan="3"/>
        <Border Grid.Row ="0" Grid.ColumnSpan="3" Background="#1f3d7a"/>
        <Border Grid.Row ="2" Grid.ColumnSpan="3" Background=" #00cc00"/>

        <TextBlock Grid.Column="0" Grid.Row="0" Text="Choose file"/>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="Choose input"/>
        <TextBlock Grid.Column="2" Grid.Row="0" Text="Output"/>

        <Button  Background=" #00cc00" Grid.Row="2" Grid.ColumnSpan="3" FontSize="25" Command="{Binding RunCommand}">Run</Button>

        <ListBox Grid.Column="0" Grid.Row="1" x:Name="Files" ItemsSource="{Binding Files}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <Button Background=" #00cc00" Grid.Row="2" Grid.ColumnSpan="3" 
                                Command="{Binding ChooseFileCommand}"
                                Content="{Binding FileName}">
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Column="1" Grid.Row="1" x:Name="Input" ItemsSource="{Binding Inputs}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <TextBlock Text="{Binding Identifier}" />
                        <Button Background=" #00cc00" Grid.Row="2" Grid.ColumnSpan="3" 
                                Command="{Binding ChangeInput}"
                                Content="{Binding Value}">
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox Grid.Column="2" Grid.Row="1" x:Name="output" ItemsSource="{Binding NodeOutputs}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <TextBlock Text="{Binding Node_Descriptor}" />
                        <TextBlock Text="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

    </Grid>
</Window>
